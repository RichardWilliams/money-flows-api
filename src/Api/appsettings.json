{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Warning"
      }
    }
  },
  "DatabaseSettings": {
    "ConnectionString": "Host=localhost;Database=property_mgmt;Username=postgres;Password=postgres"
  },
