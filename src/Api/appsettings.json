    "BasePath": "/app/attachments",
    "MaxFileSizeMb": 10,
    "AllowedExtensions": [".pdf", ".jpg", ".jpeg", ".png", ".doc", ".docx", ".xls", ".xlsx"]
  },
  "CorsSettings": {
    "AllowedOrigins": ["http://localhost:5173", "http://localhost:3000"]
  },
  "AllowedHosts": "*"
}
